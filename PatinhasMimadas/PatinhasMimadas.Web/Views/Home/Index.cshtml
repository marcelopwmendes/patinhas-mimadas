@using PatinhasMimadas.Common.Resources

@{
    ViewData["Title"] = "Home Page";
}


<div class="welcome-div">
    <h1 class="welcome-text-title">@Html.Raw(TitlesResource.Welcome)</h1>
    <p class="welcome-text-subtitle">@TitlesResource.ExactlyWhatYourDogNeeds</p>
</div>

<div class="about-div" id="about">
    <div class="about-div-text">
        <h1 class="about-text-title">@TitlesResource.Title</h1>
        <p class="about-text-subtitle">@LabelResources.About1</p>
        <br />
        <p class="about-text-subtitle">@LabelResources.About2</p>
    </div>
    <img class="logo" src="~/img/patinhas-mimadas-logo.png" alt="logo" />
</div>
<div>
    <div class="services-div">
        <button id="previous"><</button>
        <button id="next">></button>
        <div class="dog-wash">
            <img class="service-img" src="~/img/dog-wash.png" alt="dog-wash" />
            <div class="service-text">
                <p class="service-title"> @TitlesResource.DogWash </p>
                <p class="service-description"> @LabelResources.DogWashDescription </p>
            </div>
        </div>
        <div class="dog-sitting" hidden="hidden">
            <img class="service-img" src="~/img/dog-sitting.png" alt="dog-sitting" />
            <div class="service-text">
                <p class="service-title"> @TitlesResource.DogSitting </p>
                <p class="service-description"> @LabelResources.DogSittingDescription </p>
            </div>
        </div>
        <div class="dog-self-service" hidden="hidden">
            <img class="service-img" src="~/img/dog-self-service.png" alt="dog-self-service" />
            <div class="service-text">
                <p class="service-title"> @TitlesResource.DogSelfService </p>
                <p class="service-description"> @LabelResources.DogSelfServiceDescription </p>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script asp-add-nonce="true">
        new App();
    </script>
}
