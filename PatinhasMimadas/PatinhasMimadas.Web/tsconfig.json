{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true,
    "typeRoots": [ "wwwroot/@types" ],
    "types": [ "jquery", "jquery.validation" ],
    "outDir": "wwwroot/js",
    "baseUrl": "wwwroot/@types"
  },
  "include": [
    "wwwroot/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot/lib",
    "wwwroot/js"
  ],
  "compileOnSave": true,
  "typeAcquisition": { "enable": true }
}
